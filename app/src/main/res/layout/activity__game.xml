<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Game"
    android:background="@color/game_background">

    <TextView
        android:id="@+id/game_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Battle!"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="30sp"></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_above="@+id/game_IBTN_play"
        android:layout_below="@+id/game_LBL_title"
    android:weightSum="22"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:weightSum="3">


            <ImageView
                android:id="@+id/game_IMG_player1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/queen"

                ></ImageView>

            <TextView
                android:id="@+id/game_LBL_score1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"></TextView>

        </LinearLayout>


        <ImageView
            android:id="@+id/game_IMG_deck1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"

            android:src="@drawable/back"></ImageView>

        <ImageView
            android:id="@+id/game_IMG_deck2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"

            android:src="@drawable/back"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:weightSum="3"
            >

            <ImageView
                android:id="@+id/game_IMG_player2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/king1"></ImageView>


            <TextView
                android:id="@+id/game_IMG_score2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"></TextView>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/game_IBTN_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@drawable/play"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        android:focusableInTouchMode="false"
        ></ImageButton>

</RelativeLayout>